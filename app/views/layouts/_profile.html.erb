<section class="profile-logo">
  <%= image_tag('logo_trippr.svg') %>
</section>
<section class="user-profile">
  <div class="profile-picture">
  
  <%= image_tag('an-user.png') %>
    
  </div>
  <h4><% if current_user.first_name? %>
    <%= current_user.full_name %>
  <% else %>
    <%= current_user.email %>
  <% end %></h4>
  <p class="profile-country">
    <%= current_user.country %>
  </p>

  <div class="profile-description">
  <p>
    <%= current_user.doscrpaoin %>
  </p>
  </div> 

  <hr>

  <div class="profile-actions">
    <% if user_signed_in? %>
      <%= link_to 'Edit your profile', edit_user_registration_path %>
      
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
    <% end %>
  </div>

</section>