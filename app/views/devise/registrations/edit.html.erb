<section class="form edit">
<h2>New name? New trips? New home?</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:multipart => true, method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :first_name, autofocus: true %>
    <%= f.input :last_name %>
    <%= f.label "Avatar" %>
    <%= f.file_field :avatar %>
    <%= f.input :description, label: 'Tell us a little bit about yourself' %>
    <%= f.input :email, required: true %>
    <%= f.input :country %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</section>